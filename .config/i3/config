# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec --no-startup-id i3-nagbar -t warning -f "pango:Hack 9" -m "Do you really want to exit?" -B "    Exit " "i3-msg exit" -B "    Lock " "pkill i3-nagbar && i3lock-fancy -gpf Monaco" -B "    Reboot " "pkill i3-nagbar && reboot" -B "    Shutdown " "pkill i3-nagbar && shutdown -h now"

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "  "
mode "  " {
    # pressing left and up will shrink the window's width and height
    # pressing right and down will grow the window's width and height
    bindsym $left   resize shrink width 10 px or 10 ppt
    bindsym $down   resize grow height 10 px or 10 ppt
    bindsym $up     resize shrink height 10 px or 10 ppt
    bindsym $right  resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left    resize shrink width 10 px or 10 ppt
    bindsym Down    resize grow height 10 px or 10 ppt
    bindsym Up      resize shrink height 10 px or 10 ppt
    bindsym Right   resize grow width 10 px or 10 ppt

    # back to normal: Enter or win+r
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

