[ipadd]
command=printf "\\uf13d " && curl ip.sb
interval=120
color=#ffff00

[vpn]
command=printf "\\uf084 " && ~/.config/i3/i3scripts/vpn
interval=120
color=#589df6

# Display current song
[mediaplayer]
command=~/.config/i3/i3scripts/mediaplayer
# instance=spotify
interval=2
signal=10
color=#E88939

