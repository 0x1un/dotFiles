#!/usr/bin/python

PATH = "/sys/class/backlight/intel_backlight/"


def get_current_light() -> int:
    with open(PATH + "brightness") as f:
        return int(f.read().strip())


def get_max_light() -> int:
    with open(PATH + "max_brightness") as f:
        return int(f.read().strip())
        

if __name__ == "__main__":
    current_light = get_current_light()
    max_light = get_max_light()
    percent = round(float(current_light / max_light) * 100)
    print("ïƒ« {}%".format(percent))
