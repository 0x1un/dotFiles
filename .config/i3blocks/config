# Free space of /
[root]
# command=printf "\\uf292 " && ~/.config/i3/i3scripts/disk
command=printf "\\uf1c0 " && ~/.config/i3/i3scripts/disk
instance=/
interval=3600
color=#f9555f

# Temperature
[temperature]
interval=2
color=#E88939

# CPU usage
[cpu_usage]
command=~/.config/i3/i3scripts/cpu_usage
interval=2
color=#589df6

# Free RAM
[memory]
# command=printf "\\uf013 " && ~/.config/i3/i3scripts/memory
command=printf " " && ~/.config/i3/i3scripts/memory
interval=2
color=#21b089

# Volume
[volume]
interval=1
signal=10
color=#f9555f

# Brightness
[brightness]
interval=1
color=#21b089


# Battery indicator
# [battery]
# command=printf "\\uf578" && ~/.config/i3/i3scripts/battery
# interval=10
# color=#E88939

[battery2]
command=~/.config/i3/i3scripts/battery2
interval=5
color=#E88939
# label=⚡
#BAT_NUMBER=0


# Wifi signal strenght
[wifi]
command=printf "\\uf1eb " && ~/.config/i3/i3scripts/wifi
instance=wlp3s0
interval=5
color=#589df6

# Time
[time]
command=printf "\\uf017 " && date '+%I:%M' 
interval=5
color=#21b089

# Date
[date]
command=printf "\\uf073 " && date '+%F %A' 
interval=3600
color=#f9555f

